/**
 * This ruleset implements a strict admin-based access control model. Admin status
 * is determined by matching the authenticated user's email address against a
 * hardcoded value in the isAdmin() function. This is a highly secure method for
 * applications with a single, known administrator.
 *
 * All study materials are publicly readable by anyone to ensure easy access.
 * However, all write operations (create, edit, delete) are strictly reserved
 * for the designated admin. User profiles are private and can only be accessed
 * by their owners.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    /**
     * Checks if a user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the currently authenticated user's UID matches the provided userId.
     * This is the fundamental check for data ownership.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Checks if the requesting user is an administrator by matching their email.
     * The email address is hardcoded for maximum security in a single-admin app.
     * This is the ONLY function that should be used for admin checks.
     */
    function isAdmin() {
      // IMPORTANT: The admin's email address is hardcoded here.
      return isSignedIn() && request.auth.token.email == 'naveenatariya999@gmail.com';
    }

    /**
     * Validates that the creator ID of a new document matches the authenticated user.
     * This prevents users from creating documents on behalf of others.
     */
    function isCreatingOwnUserDoc(userId) {
      return request.resource.data.id == userId;
    }
    
    /**
     * Validates that critical, immutable fields are not changed during an update.
     * Protects relational integrity.
     */
    function userFieldsAreImmutable() {
      return request.resource.data.id == resource.data.id && request.resource.data.role == resource.data.role;
    }

    // -------------------------------------------------------------------------
    // Collection Rules
    // -------------------------------------------------------------------------

    /**
     * @description Users can create and manage their own profile document. They
     *              cannot see or edit anyone else's profile. Listing all users is forbidden.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Prevent listing all users for security.
      allow create: if isOwner(userId) && isCreatingOwnUserDoc(userId);
      allow update: if isOwner(userId) && resource != null && userFieldsAreImmutable();
      allow delete: if isOwner(userId) && resource != null;
    }

    /**
     * @description Study materials are public to read for anyone. Only a verified
     *              admin (identified by email) can create, update, or delete content.
     * @path /study_materials/{studyMaterialId}
     */
    match /study_materials/{studyMaterialId} {
      allow get: if true;
      allow list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}
